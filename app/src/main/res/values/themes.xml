<resources>
    <style name="Theme.UTSproject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background warna putih -->
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- Status bar warna putih -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <!-- Membuat text status bar menjadi gelap karena background putih -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Menghilangkan border/frame default -->
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
